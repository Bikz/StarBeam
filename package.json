{
  "name": "starbeam",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:biome": "biome lint .",
    "lint:biome:ci": "biome lint --error-on-warnings .",
    "lint:biome:fix": "biome lint --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "validate:fast": "pnpm -s lint && pnpm -s typecheck && pnpm -s test",
    "quality": "pnpm -s format:check && pnpm -s lint && pnpm -s lint:biome:ci && pnpm -s typecheck && pnpm -s test && pnpm -s build && pnpm -s knip",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "e2e": "playwright test",
    "knip": "DATABASE_URL=postgresql://starbeam:starbeam@localhost:5432/starbeam DIRECT_DATABASE_URL=postgresql://starbeam:starbeam@localhost:5432/starbeam knip",
    "prepare": "node -e \"const {existsSync}=require('fs'); const {spawnSync}=require('child_process'); if(!existsSync('.git')) process.exit(0); const r=spawnSync('lefthook',['install'],{stdio:'inherit'}); process.exit(r.status??0);\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.55.0",
    "eslint": "^10.0.0",
    "knip": "^5.83.1",
    "lefthook": "^2.1.1",
    "prettier": "^3.6.0",
    "tsx": "^4.21.0",
    "turbo": "^2.8.7",
    "typescript-eslint": "^8.55.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@sentry/cli",
      "esbuild",
      "lefthook",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
