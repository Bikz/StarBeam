{
  "name": "@starbeam/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "node scripts/prismaWithRootEnv.js generate && tsup src/index.ts --format esm --dts --watch",
    "prebuild": "node scripts/prismaWithRootEnv.js generate",
    "build": "tsup src/index.ts --format esm --dts",
    "lint": "pnpm exec eslint src test --max-warnings 0",
    "pretypecheck": "node scripts/prismaWithRootEnv.js generate",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --import tsx --test test/*.test.ts",
    "prisma:generate": "node scripts/prismaWithRootEnv.js generate",
    "prisma:migrate": "node scripts/prismaWithRootEnv.js migrate deploy",
    "prisma:migrate:dev": "node scripts/prismaWithRootEnv.js migrate dev"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.4",
    "prisma": "^7.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
