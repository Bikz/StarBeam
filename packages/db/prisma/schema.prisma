generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth.js (Prisma Adapter) baseline tables + Starbeam domain tables.
// We keep IDs as strings for easier interop across services/clients.

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  memberships       Membership[]
  createdWorkspaces Workspace[]  @relation("WorkspaceCreatedBy")

  usedInvites Invite[] @relation("InviteUsedBy")

  authoredGoals          Goal[]                 @relation("GoalAuthor")
  authoredAnnouncements  Announcement[]         @relation("AnnouncementAuthor")
  departmentMemberships  DepartmentMembership[]
  announcementDismissals AnnouncementDismiss[]
  authoredIdeas          IdeaSubmission[]       @relation("IdeaAuthor")
  pulseEditions          PulseEdition[]
  googleConnections      GoogleConnection[]
  githubConnections      GitHubConnection[]
  linearConnections      LinearConnection[]
  notionConnections      NotionConnection[]
  deviceAuthRequests     DeviceAuthRequest[]
  apiRefreshTokens       ApiRefreshToken[]
  sourceItems            SourceItem[]
  tasks                  Task[]
  blobs                  Blob[]               @relation("UserBlobs")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum WorkspaceType {
  PERSONAL
  ORG
}

enum Role {
  ADMIN
  MANAGER
  MEMBER
}

enum GoalPriority {
  HIGH
  MEDIUM
  LOW
}

enum IdeaStatus {
  NEW
  TRIAGED
  CLOSED
}

model Workspace {
  id   String        @id @default(cuid())
  slug String        @unique
  name String
  type WorkspaceType @default(ORG)

  createdById String
  createdBy   User   @relation("WorkspaceCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  memberships Membership[]
  invites     Invite[]

  profile         WorkspaceProfile?
  departments     Department[]
  goals           Goal[]
  announcements   Announcement[]
  ideaSubmissions IdeaSubmission[]
  pulseEditions   PulseEdition[]
  jobRuns         JobRun[]
  googleConnections GoogleConnection[]
  githubConnections GitHubConnection[]
  linearConnections LinearConnection[]
  notionConnections NotionConnection[]
  sourceItems     SourceItem[]
  tasks           Task[]
  blobs           Blob[]          @relation("WorkspaceBlobs")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Membership {
  id          String @id @default(cuid())
  workspaceId String
  userId      String
  role        Role   @default(MEMBER)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([workspaceId, userId])
}

model Invite {
  id          String   @id @default(cuid())
  workspaceId String
  email       String
  role        Role
  tokenHash   String   @unique
  expiresAt   DateTime

  usedAt       DateTime?
  usedByUserId String?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  usedBy    User?     @relation("InviteUsedBy", fields: [usedByUserId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([workspaceId])
  @@index([email])
}

model WorkspaceProfile {
  id          String @id @default(cuid())
  workspaceId String @unique

  websiteUrl        String?
  description       String?
  competitorDomains String[] @default([])

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
}

model Department {
  id             String  @id @default(cuid())
  workspaceId    String
  name           String
  promptTemplate String  @default("")
  enabled        Boolean @default(true)

  workspace   Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  memberships DepartmentMembership[]
  goals       Goal[]
  pulseCards  PulseCard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, name])
  @@index([workspaceId])
}

model DepartmentMembership {
  id           String @id @default(cuid())
  departmentId String
  userId       String

  department Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([departmentId, userId])
  @@index([userId])
}

model Goal {
  id           String  @id @default(cuid())
  workspaceId  String
  departmentId String?
  authorUserId String

  title      String
  body       String       @default("")
  priority   GoalPriority @default(MEDIUM)
  active     Boolean      @default(true)
  targetDate DateTime?

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  department Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  author     User        @relation("GoalAuthor", fields: [authorUserId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
  @@index([departmentId])
  @@index([active])
}

model Announcement {
  id           String @id @default(cuid())
  workspaceId  String
  authorUserId String

  title  String
  body   String  @default("")
  pinned Boolean @default(false)

  workspace  Workspace             @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  author     User                  @relation("AnnouncementAuthor", fields: [authorUserId], references: [id], onDelete: Restrict)
  dismissals AnnouncementDismiss[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
  @@index([pinned])
}

model AnnouncementDismiss {
  id             String   @id @default(cuid())
  announcementId String
  userId         String
  dismissedAt    DateTime @default(now())

  announcement Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([announcementId, userId])
  @@index([userId])
}

model IdeaSubmission {
  id           String @id @default(cuid())
  workspaceId  String
  authorUserId String

  title  String
  body   String     @default("")
  status IdeaStatus @default(NEW)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  author    User      @relation("IdeaAuthor", fields: [authorUserId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
  @@index([status])
}

enum GoogleConnectionStatus {
  CONNECTED
  REVOKED
  ERROR
}

model GoogleConnection {
  id          String @id @default(cuid())
  workspaceId String
  ownerUserId String

  googleAccountEmail String
  scopes             String[]              @default([])
  accessTokenEnc     String
  refreshTokenEnc    String?
  expiryAt           DateTime?
  status             GoogleConnectionStatus @default(CONNECTED)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner     User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  syncState GoogleSyncState?
  sourceItems SourceItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, ownerUserId, googleAccountEmail])
  @@index([workspaceId])
  @@index([ownerUserId])
}

model GoogleSyncState {
  id           String @id @default(cuid())
  connectionId String @unique

  lastGmailSyncAt    DateTime?
  lastCalendarSyncAt DateTime?
  lastDriveSyncAt    DateTime?
  cursor             Json?

  connection GoogleConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
}

enum SourceItemType {
  GMAIL_MESSAGE
  CALENDAR_EVENT
  DRIVE_FILE
  GITHUB_ISSUE
  GITHUB_PULL_REQUEST
  GITHUB_COMMIT
  LINEAR_ISSUE
  NOTION_PAGE
}

enum GitHubConnectionStatus {
  CONNECTED
  REVOKED
  ERROR
}

enum GitHubRepoSelectionMode {
  ALL
  SELECTED
}

model GitHubConnection {
  id          String @id @default(cuid())
  workspaceId String
  ownerUserId String

  githubLogin String
  tokenEnc    String
  status      GitHubConnectionStatus @default(CONNECTED)

  repoSelectionMode GitHubRepoSelectionMode @default(ALL)
  selectedRepoFullNames String[] @default([])

  lastSyncedAt DateTime?
  cursor       Json?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner     User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, ownerUserId, githubLogin])
  @@index([workspaceId])
  @@index([ownerUserId])
}

enum LinearConnectionStatus {
  CONNECTED
  REVOKED
  ERROR
}

model LinearConnection {
  id          String @id @default(cuid())
  workspaceId String
  ownerUserId String

  linearUserId String
  linearUserEmail String?
  tokenEnc     String
  status       LinearConnectionStatus @default(CONNECTED)

  lastSyncedAt DateTime?
  cursor       Json?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner     User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, ownerUserId, linearUserId])
  @@index([workspaceId])
  @@index([ownerUserId])
}

enum NotionConnectionStatus {
  CONNECTED
  REVOKED
  ERROR
}

model NotionConnection {
  id          String @id @default(cuid())
  workspaceId String
  ownerUserId String

  notionBotId   String
  notionWorkspaceName String?
  tokenEnc      String
  status        NotionConnectionStatus @default(CONNECTED)

  lastSyncedAt DateTime?
  cursor       Json?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner     User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, ownerUserId, notionBotId])
  @@index([workspaceId])
  @@index([ownerUserId])
}

enum BlobEncryption {
  AES_256_GCM_V1
}

model Blob {
  id String @id @default(cuid())

  workspaceId String
  ownerUserId String

  bucket String
  key    String

  contentType String?
  sizeBytes   Int
  sha256      String

  encryption BlobEncryption @default(AES_256_GCM_V1)

  deletedAt DateTime?

  workspace Workspace @relation("WorkspaceBlobs", fields: [workspaceId], references: [id], onDelete: Cascade)
  owner     User      @relation("UserBlobs", fields: [ownerUserId], references: [id], onDelete: Cascade)

  sourceItems SourceItem[] @relation("SourceItemContentBlob")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bucket, key])
  @@index([workspaceId])
  @@index([ownerUserId])
  @@index([deletedAt])
}

model SourceItem {
  id          String @id @default(cuid())
  workspaceId String
  ownerUserId String
  connectionId String?

  type       SourceItemType
  externalId String

  url         String?
  title       String
  snippet     String?
  contentText String?
  contentBlobId String?

  occurredAt DateTime
  endsAt     DateTime?

  metadata Json?
  raw      Json?

  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner       User             @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  connection  GoogleConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  contentBlob Blob?            @relation("SourceItemContentBlob", fields: [contentBlobId], references: [id], onDelete: SetNull)
  tasks       Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, ownerUserId, type, externalId])
  @@index([workspaceId])
  @@index([ownerUserId])
  @@index([connectionId])
  @@index([contentBlobId])
  @@index([occurredAt])
}

enum TaskStatus {
  OPEN
  DONE
  SNOOZED
}

model Task {
  id          String @id @default(cuid())
  workspaceId String
  userId      String
  sourceItemId String?

  title  String
  body   String @default("")
  status TaskStatus @default(OPEN)

  dueAt         DateTime?
  snoozedUntil  DateTime?

  workspace  Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceItem SourceItem? @relation(fields: [sourceItemId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sourceItemId])
  @@index([workspaceId])
  @@index([userId])
  @@index([status])
}

enum PulseEditionStatus {
  READY
  GENERATING
  ERROR
}

model PulseEdition {
  id          String @id @default(cuid())
  workspaceId String
  userId      String
  editionDate DateTime
  timezone    String            @default("UTC")
  status      PulseEditionStatus @default(GENERATING)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards     PulseCard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, userId, editionDate])
  @@index([workspaceId])
  @@index([userId])
}

enum PulseCardKind {
  ANNOUNCEMENT
  GOAL
  WEB_RESEARCH
  INTERNAL
}

model PulseCard {
  id           String @id @default(cuid())
  editionId    String
  kind         PulseCardKind
  departmentId String?

  title  String
  body   String @default("")
  why    String @default("")
  action String @default("")
  sources Json?

  priority Int @default(0)

  edition    PulseEdition @relation(fields: [editionId], references: [id], onDelete: Cascade)
  department Department?  @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([editionId])
  @@index([kind])
  @@index([departmentId])
}

enum JobKind {
  NIGHTLY_WORKSPACE_RUN
  WORKSPACE_BOOTSTRAP
}

enum JobStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
  PARTIAL
}

model JobRun {
  id           String    @id @default(cuid())
  workspaceId  String
  kind         JobKind
  status       JobStatus @default(QUEUED)
  startedAt    DateTime?
  finishedAt   DateTime?
  errorSummary String?
  meta         Json?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([workspaceId])
  @@index([kind])
  @@index([status])
}

// macOS device auth flow + API tokens (separate from Auth.js sessions).
enum DeviceAuthStatus {
  PENDING
  APPROVED
  CONSUMED
}

model DeviceAuthRequest {
  id String @id @default(cuid())

  // sha256(deviceCode) so we never persist the plaintext code.
  deviceCodeHash String @unique
  status         DeviceAuthStatus @default(PENDING)

  approvedUserId String?
  approvedAt     DateTime?
  consumedAt     DateTime?
  expiresAt      DateTime

  approvedUser User? @relation(fields: [approvedUserId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([expiresAt])
  @@index([approvedUserId])
}

model ApiRefreshToken {
  id     String @id @default(cuid())
  userId String

  // sha256(refreshToken) so we never persist the plaintext token.
  tokenHash String @unique

  expiresAt DateTime
  revokedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model WaitlistSignup {
  id String @id @default(cuid())

  email        String @unique
  referralCode String @unique

  referredById String?
  referredBy   WaitlistSignup?  @relation("WaitlistReferrals", fields: [referredById], references: [id], onDelete: SetNull)
  referrals    WaitlistSignup[] @relation("WaitlistReferrals")

  createdAt DateTime @default(now())

  @@index([referredById])
  @@index([createdAt])
}
