generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth.js (Prisma Adapter) baseline tables + Starbeam domain tables.
// We keep IDs as strings for easier interop across services/clients.

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  memberships   Membership[]
  createdWorkspaces Workspace[] @relation("WorkspaceCreatedBy")
  usedInvites   Invite[] @relation("InviteUsedBy")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum WorkspaceType {
  PERSONAL
  ORG
}

model Workspace {
  id        String        @id @default(cuid())
  slug      String        @unique
  name      String
  type      WorkspaceType @default(ORG)

  createdById String
  createdBy   User @relation("WorkspaceCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  memberships Membership[]
  invites     Invite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  MEMBER
}

model Membership {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  role        Role      @default(MEMBER)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([workspaceId, userId])
}

model Invite {
  id          String   @id @default(cuid())
  workspaceId String
  email       String
  role        Role
  tokenHash   String   @unique
  expiresAt   DateTime

  usedAt       DateTime?
  usedByUserId String?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  usedBy    User?     @relation("InviteUsedBy", fields: [usedByUserId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([workspaceId])
  @@index([email])
}
