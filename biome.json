{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/.next",
      "!!**/.turbo",
      "!!**/.vercel",
      "!!**/.wrangler",
      "!!**/output",
      "!!**/DerivedData",
      "!!apps/macos"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "assist": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
