    "test": "node --import tsx --test test/*.test.ts"
  },
  "dependencies": {
    "@starbeam/db": "workspace:*",
    "@starbeam/shared": "workspace:*",
    "dotenv": "^17.2.2",
    "graphile-worker": "^0.16.6",
    "openai": "^5.23.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.19.32",
    "@types/pg": "^8.15.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
