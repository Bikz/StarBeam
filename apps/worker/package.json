{
  "name": "@starbeam/worker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --sourcemap",
    "start": "node dist/index.js",
    "lint": "pnpm exec eslint src test --max-warnings 0",
